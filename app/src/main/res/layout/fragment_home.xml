            <!--CardViewSpeciali-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/specialiCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
