<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordDialog_oldPasswordInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:hint="Inserisci la tua vecchia password"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="@dimen/field_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/field_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/field_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/field_corner_radius"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_lock">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordDialog_oldPasswordInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordDialog_newPasswordInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:hint="Inserisci la nuova password"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_password_again"
        app:endIconMode="password_toggle"
        app:boxCornerRadiusBottomEnd="@dimen/field_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/field_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/field_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/field_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordDialog_oldPasswordInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordDialog_newPasswordInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>