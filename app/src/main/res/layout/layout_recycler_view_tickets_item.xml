<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp"
    android:id="@+id/recView_ticketsItem_constraintLayout">

    <!-- Oggetto -->
    <TextView
        android:id="@+id/recView_ticketsItem_oggettoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oggetto"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/search_primary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Data -->
    <TextView
        android:id="@+id/recView_ticketsItem_dataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Data"
        android:fontFamily="@font/nunito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recView_ticketsItem_oggettoTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>