<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="profile_category"
        app:title="Profilo"
        app:layout="@layout/nunito_preference_category">

        <Preference
            app:key="key_login"
            app:title="Accedi al tuo account"
            app:layout="@layout/nunito_preference_title"
            app:isPreferenceVisible="false">
            <intent
                android:targetPackage="com.far.nowaste"
                android:targetClass="com.far.nowaste.LoginActivity"/>
        </Preference>

        <EditTextPreference
            app:key="key_full_name"
            app:title="Nome"
            app:summary="Modifica il tuo nome"
            app:layout="@layout/nunito_preference_title_summary"
            app:dialogTitle="Nome"
            app:dialogMessage="Inserisci il tuo nome" />

        <Preference
            app:key="key_picture"
            app:title="Foto profilo"
            app:summary="Cambia la foto del tuo profilo"
            app:layout="@layout/nunito_preference_title_summary" />

        <EditTextPreference
            app:key="key_email"
            app:title="Email"
            app:summary="Modifica la tua email"
            app:layout="@layout/nunito_preference_title_summary"
            app:dialogTitle="Email"
            app:dialogMessage="Inserisci la tua nuova email" />

        <EditTextPreference
            app:key="key_password"
            app:title="Password"
            app:summary="Modifica la tua password"
            app:layout="@layout/nunito_preference_title_summary"
            app:dialogTitle="Password"
            app:dialogMessage="Inserisci la tua nuova password" />

        <Preference
            app:key="key_logout"
            app:title="Logout"
            app:summary="Esci dal tuo account"
            app:layout="@layout/nunito_preference_title_summary" />

        <EditTextPreference
            app:key="key_reset"
            app:title="Cancella i dati del tuo account"
            app:layout="@layout/nunito_preference_title"
            app:dialogTitle="Cancella i dati del tuo account"
            app:dialogMessage="Questa operazione non è reversibile. Digita ''Acconsento'' per confermare." />

        <EditTextPreference
            app:key="key_delete"
            app:title="Elimina il tuo account"
            app:layout="@layout/nunito_preference_title"
            app:dialogTitle="Elimina il tuo account"
            app:dialogMessage="Questa operazione non è reversibile. Digita ''Acconsento'' per confermare." />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="other_category"
        app:title="Altro"
        app:layout="@layout/nunito_preference_category">

        <SwitchPreferenceCompat
            app:key="enable_notification"
            app:title="Notifiche"
            app:layout="@layout/nunito_preference_title_switch" />

        <SwitchPreferenceCompat
            app:key="enable_dark_theme"
            app:layout="@layout/nunito_preference_title_switch"
            app:title="Tema scuro" />

    </PreferenceCategory>
</PreferenceScreen>