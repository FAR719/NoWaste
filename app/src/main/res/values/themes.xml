<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoWaste" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/background</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="divider">@color/divider</item>

        <!--Custom widgets theme. -->
        <item name="textInputStyle">@style/Widget.NoWaste.TextInputLayout.OutlinedBox</item>
        <item name="bottomSheetDialogTheme">@style/Theme.NoWaste.BottomSheetDialog</item>

        <!--Contextual action bar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.NoWaste.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_clear</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="searchViewStyle">@style/Widget.NoWaste.SearchView</item>
    </style>

    <!--Toolbar theme. -->
    <style name="TextAppearance.NoWaste.Toolbar.Title" parent="TextAppearance.AppCompat.Large">
        <item name="fontFamily">@font/nunito</item>
    </style>

    <!--Contextual Action Bar theme. -->
    <style name="Widget.NoWaste.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_900</item>
    </style>

    <!--SearchView theme. -->
    <style name="Widget.NoWaste.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="layout">@layout/toolbar_search_view</item>
        <item name="commitIcon">@drawable/ic_search_commit</item>
        <item name="colorControlNormal">@color/material_light_active_icon</item>
        <item name="colorControlHighlight">@color/material_ripple_light</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.NoWaste.AutoCompleteTextView</item>
        <item name="suggestionRowLayout">@layout/toolbar_search_view_suggestion_row</item>
        <item name="android:maxWidth">9999dp</item>
    </style>
    <style name="Widget.NoWaste.AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/bg_search_suggestions</item>
        <item name="android:popupElevation">0dp</item>
    </style>
    <style name="ThemeOverlay.NoWaste.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/Widget.NoWaste.SearchView</item>
    </style>

    <!--CalendarView theme. -->
    <style name="TextAppearance.NoWaste.Calendar.Header" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="TextAppearance.NoWaste.Calendar.WeekDay" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="TextAppearance.NoWaste.Calendar.Date" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/mcv_text_date_light</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <!--Navigation View theme. -->
    <style name="Theme.NoWaste.NavigationView">
        <item name="fontFamily">@font/nunito</item>
    </style>
    <style name="TextAppearance.NoWaste.NavigationView.Item.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/nunito</item>
    </style>


    <!--Dialog theme. -->
    <style name="ThemeOverlay.NoWaste.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:backgroundTint">@color/card_background</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.NoWaste.AlertDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.NoWaste.AlertDialog.Body</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.NoWaste.AlertDialog.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.NoWaste.AlertDialog.Button</item>
    </style>
    <style name="TextAppearance.NoWaste.AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.NoWaste.AlertDialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="fontFamily">@font/nunito</item>
    </style>
    <style name="Widget.NoWaste.AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <!--Material DatePicker theme. -->
    <style name="ThemeOverlay.NoWaste.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.NoWaste.DatePicker.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.NoWaste.DatePicker.Button</item>
    </style>
    <style name="Widget.NoWaste.DatePicker.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <!--Material Fields theme. -->
    <style name="Widget.NoWaste.TextInputLayout.OutlinedBox"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.NoWaste.TextInputLayout.OutlinedBox</item>
    </style>
    <style name="Widget.NoWaste.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.NoWaste.TextInputLayout.OutlinedBox</item>
    </style>
    <style name="ThemeOverlay.NoWaste.TextInputLayout.OutlinedBox" parent="">
        <item name="colorPrimary">@color/accent</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox</item>
    </style>

    <!--Bottom Sheet theme. -->
    <style name="Theme.NoWaste.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.NoWaste.BottomSheet.Modal</item>
    </style>
    <style name="Widget.NoWaste.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

</resources>