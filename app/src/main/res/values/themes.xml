<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoWaste" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/background</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="divider">@color/divider</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="searchViewStyle">@style/SearchViewTheme</item>
    </style>

    <!--CalendarView theme. -->
    <style name="CustomHeaderTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/search_primary_text</item>
    </style>

    <style name="CustomWeekdayTextAppearance" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CustomDateTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/mcv_text_date_light</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Toolbar Title theme. -->
    <style name="nunitoLargeTitle" parent="TextAppearance.AppCompat.Large">
        <item name="fontFamily">@font/nunito</item>
    </style>

    <!--Navigation View theme. -->
    <style name="NunitoNavigationView">
        <item name="fontFamily">@font/nunito</item>
    </style>

    <!--Dialog Theme. -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:backgroundTint">@color/card_background</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/secondary</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/secondary</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="textAllCaps">true</item>
    </style>

    <!--Material DatePicker theme. -->
    <style name="CustomMaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="buttonBarPositiveButtonStyle">@style/ThemeMaterialCalendarButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/ThemeMaterialCalendarButton</item>
    </style>

    <style name="ThemeMaterialCalendarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>
</resources>