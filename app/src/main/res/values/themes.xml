<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoWaste" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/background</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="divider">@color/divider_color</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="searchViewStyle">@style/SearchViewTheme</item>
    </style>

    <!--CalendarView theme. -->
    <style name="CustomHeaderTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomWeekdayTextAppearance" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CustomDateTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/mcv_text_date_light</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Toolbar Title theme. -->
    <style name="nunitoLargeTitle" parent="TextAppearance.AppCompat.Large">
        <item name="fontFamily">@font/nunito</item>
    </style>

    <!--Navigation View theme.-->
    <style name="NunitoNavigationView">
        <item name="fontFamily">@font/nunito</item>
    </style>
</resources>