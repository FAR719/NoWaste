<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoWaste" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/background</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/black</item>
        <item name="divider">@color/divider</item>

        <!--Custom widgets theme. -->
        <item name="textInputStyle">@style/Widget.NoWaste.TextInputLayout.OutlinedBox</item>
        <item name="bottomSheetDialogTheme">@style/Theme.NoWaste.BottomSheetDialog</item>

        <!--Contextual action bar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.NoWaste.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_clear</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="searchViewStyle">@style/Widget.NoWaste.SearchView</item>
    </style>

    <!--CalendarView theme. -->
    <style name="TextAppearance.NoWaste.Calendar.Date" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/my_date_text_color</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Bottom Sheet theme. -->
    <style name="Theme.NoWaste.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.NoWaste.BottomSheet.Modal</item>
    </style>
</resources>